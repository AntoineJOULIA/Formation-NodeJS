<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>Document</title>
</head>
<body>
  
<h1>Available products</h1>

<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Price</td>
      <td>Counter</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => {%>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.EUR_price %> €</td>
        <td><%= product.orders_counter %></td>
        <td><button onclick=order(<%= product.id %>)>Order</button></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<script>
  function order(id) {
    fetch(`http://localhost:3000/${id}`, {method: "POST"})
      .then(response => response.json())
      .then(product => {
        alert(
          `Commande terminée.
        Voici votre fichier ${product.file_link} (${product.orders_counter})`
      )})
  }
</script>
</body>
</html>
